{% extends 'base.html.twig' %}

{% block title %}
    Show Food
{% endblock title %}

{% block body %}

<div class = 'container d-flex justify-content-center'>
    <div class = 'card m-3 p-3' style="width:50rem;">
        <div class = "d-flex justify-content-between">
            <div>
                <img src = "{{food.getImgPath}}" alt = "{{food.Description}} img" class = 'rounded'>
            </div>
            <div>
                <h1 class = 'text-center'>
                    {{food.Description}}
                </h1>
            </div>
            <div>
                Date: {{food.Date | date('m-d-Y')}}
            </div>
        </div>
        <hr>
        <div>
            <div class = 'row mb-3'>
                <div class = 'col-6'>
                    Calories: {{food.EnergyAmount}} x {{food.Quantity}} serving(s) == {{food.getTotalEnergyAmount}} KCALS
                </div>
                <div class = 'col-6'>
                    Fat: {{food.FatAmount}} x {{food.Quantity}} serving(s) == {{food.getTotalFatAmount}} g
                </div>
            </div>
            <div class = 'row mb-3'>
                <div class = 'col-6'>
                    Potassium: {{food.PotassiumAmount}} x {{food.Quantity}} serving(s) == {{food.GetTotalPotassiumAmount}} g
                </div>
                <div class = 'col-6'>
                    Fiber: {{food.FiberAmount}} x {{food.Quantity}} serving(s) == {{food.GetTotalFiberAmount}} g
                </div>
            </div>
            <div class = "row mb-3">
                <div class = 'col-6'>
                    Quantity: {{food.Quantity}}
                </div>
            </div>
        </div>
        <div class = 'd-flex justify-content-between'>
            <a href="{{path('FoodController__updateFoodById', {strDataType: get_class(food), id: food.id })}}">
                <button class = 'btn btn-sm btn-outline-primary'>
                Edit
                </button>
            </a>
            <button class = 'btn btn-sm btn-outline-danger' onclick="window.location.href='/food/delete/{{get_class(food)}}/{{food.id}}'" >
                Delete
            </button>
        </div>
    </div>
</div>

{% endblock body %}